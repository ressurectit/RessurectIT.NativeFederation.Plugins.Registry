{
    "Logging": 
    {
        "LogLevel": 
        {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "Serilog":
    {
        "Using":
        [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Debug",
            "Serilog.Sinks.File",
            "Serilog.Settings.Configuration"
        ],
        "MinimumLevel":
        {
            "Default": "Information",
            "Override":
            {
                "System": "Error"
            }
        },
        "WriteTo":
        [
            {
                "Name": "Debug"
            },
            {
                "Name": "Console"
            },
            {
                "Name": "Logger",
                "Args":
                {
                    "configureLogger":
                    {
                        "WriteTo":
                        [
                            {
                                "Name": "File",
                                "Args":
                                {
                                    "path": "./Logs/Error.logs",
                                    "rollingInterval": "Day"
                                }
                            }
                        ],
                        "Filter":
                        [
                            {
                                "Name": "ByIncludingOnly",
                                "Args":
                                {
                                    "expression": "@l = 'Error'"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args":
                {
                    "configureLogger":
                    {
                        "WriteTo":
                        [
                            {
                                "Name": "File",
                                "Args":
                                {
                                    "path": "./Logs/App.logs",
                                    "rollingInterval": "Day"
                                }
                            }
                        ],
                        "Filter":
                        [
                            {
                                "Name": "ByExcluding",
                                "Args":
                                {
                                    "expression": "@l = 'Error'"
                                }
                            }
                        ]
                    }
                }
            }
        ]
    }
}
